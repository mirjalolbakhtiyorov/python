# sonning kvadratini hisoblovchi dastur
sonlar = list(range(1,11))
for son in sonlar:
    print(f"{son} ning kvadrati {son**2} ga teng")
    
# sonning kvadrati va kubini  hisoblovchi dastur
sonlar = list(range(1,11))
for son in sonlar:
    print(f"{son} ning kvadrati {son**2} ga teng")
    print(f"{son} ning kubi {son*son*son} ga teng")
# 3 kara jadval 
number = list(range(1,11));
son=3;
for n in number:
    print(f"{son}*{n} = {son*n}")
    
# 4 kara jadval
number = list(range(1,11))
son_turt = 4;
for k in number:
    print(f"{son_turt}*{k}={son_turt*k}")
    
